
<div class="row pagesavedate hid-overflow">
  <div class="savedate col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <%= cl_image_tag("https://res.cloudinary.com/dpcd0je1d/image/upload/v1570448228/lisa/save_hyhbqb.jpg") %>
  </div>
  <div class="justify-content-center align-items-center col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <div class="confirmation-presence">
      <br>

      <h5>
      Confirmation de votre présence : </h5>
      <br>


      <%= simple_form_for @save_the_date do |f| %>
      <%= f.input :name, label: "Nom et Prénom : " %>

      <div class="row">
        <div class="col-sm">
          <%= f.input :present, label:"Oui, je serai présent(e) !" %>
        </div>
        <div class="col-sm">
          <%= f.input :number_of_invites, default:0, label: "     | Nous serons : " , collection: [0, 1, 2, 3, 4, 5], input_html: { :style=> 'width: 25%;', :rows => 4}%>
        </div>
      </div>
      <%= f.input :mairie, label:"Non, mais je serai présent(e) au mariage civil à Paris" %>
      <%= f.input :rien, label:"Je ne vais pas pouvoir mais je penserai à vous !" %>
      <%= f.input :comment, label: "Laissez nous un petit mot : ", :as => :text, input_html: { :style=> 'width: 100%;', :rows => 4} %>
      <%= f.submit "ENVOYER", class: 'btn btn-send' %>
      <% end %>


    </div>
  </div>
</div>




