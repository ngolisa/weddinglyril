<h1>Ceux qui ont répondus</h1>
<% a = 0 %>
<% @save_the_dates.each do |s|  %>
<% a += s.number_of_invites %>
<% end %>



<p>Groupe 3 jours :  <%= a %></p>



<h2>GROUPE 3 JOURS</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">👨‍👩‍👧‍👦</th>
      <th scope="col">🐪</th>
      <th scope="col">💒</th>
      <th scope="col">❌</th>
      <th scope="col">Petit mot 📋</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @save_the_dates.each do |answer| %>
    <tr>
      <th scope="row"><%= answer.name %></th>
      <td><%= answer.number_of_invites %></td>
      <td><%= answer.present ? "🐪" : "-" %></td>
      <td><%= answer.mairie ? "💒" : "-" %></td>
      <td><%= answer.rien ? "❌" : "-" %></td>
      <td><%= answer.comment %></td>
      <td> <%= link_to "Edit", edit_save_the_date_path(answer) %></td>
    </tr>
    <%end%>
  </tbody>
</table>




