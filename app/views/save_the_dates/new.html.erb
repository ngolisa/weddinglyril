
<div class="row pagesavedate">
  <div class="savedate col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <%= cl_image_tag("https://res.cloudinary.com/dpcd0je1d/image/upload/v1570448228/lisa/save_hyhbqb.jpg") %>
  </div>
  <div class="justify-content-center align-items-center col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <div class="confirmation-presence">
      <br>
      <h3><strong>Confirmation de votre presence:</strong></h3>
    </div>
    <div class="form-save-the-date">
      <%= simple_form_for @save_the_date do |f| %>
      <%= f.input :name, label: "NOM ET PRENOM" %>
      <%= f.input :present, label:"OUI, JE SERAI PRESENT-E" %>
      <%= f.input :number_of_invites, default:1, label: "NOUS SERONS:" , collection: [1, 2, 3, 4, 5], :as => :radio_buttons%>
      <%= f.input :mairie, label:"JE SERAI PRESENT-E AU MARIAGE CIVIL LE 4 JUIN 2020" %>
      <%= f.input :rien, label:"NON, MAIS JE PENSERAI A VOUS" %>
      <%= f.input :comment, label: "LAISSEZ NOUS UN PETIT MOT: " %>
      <%= f.button :submit, label:"SAVE THE DATE", class: 'btn btn-light' %>
      <% end %>
    </div>

  </div>
</div>
