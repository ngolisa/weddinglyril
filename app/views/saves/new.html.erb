
<div class="row pagesavedate">
  <div class="savedate col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <%= cl_image_tag("https://res.cloudinary.com/dpcd0je1d/image/upload/v1570896865/lisa/les_2_save_the_date_save_the_date_16-18_Juin_chwp6d_lrfnu6.jpg") %>
  </div>
  <div class="justify-content-center align-items-center col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <div class="confirmation-presence">

      <h5>
      Confirmation de votre présence : </h5>
      <br>


      <%= simple_form_for @save do |f| %>
      <%= f.input :name, label: "Nom et Prénom : " %>

      <div class="row">
        <div class="col-sm">
          <%= f.input :present, label:"Oui, je serai présent(e) !", class: "checkbox", input_html: { id: "1" } %>
        </div>
      </div>
      <%= f.input :mairie, label:"Non, mais je serai présent(e) au mariage civil à Paris le 4 juin", class: "checkbox", input_html: { id: "2" }  %>
      <%= f.input :rien, label:"Je ne vais pas pouvoir mais je penserai à vous !", class: "checkbox", input_html: { id: "3" }  %>
      <%= f.input :comment, label: "Laissez nous un petit mot : ", :as => :text, input_html: { :style=> 'width: 100%;', :rows => 4} %>
      <%= f.submit "ENVOYER", class: 'btn btn-send' %>
      <% end %>


    </div>
  </div>
</div>



<script>

  const checkbox1 = document.getElementById("1");

  const checkbox2 = document.getElementById("2");

  const checkbox3 = document.getElementById("3");

  function handleChecked1() {

    checkbox2.checked = false;

    checkbox3.checked = false;

  }

  function handleChecked2() {

    checkbox1.checked = false;

    checkbox3.checked = false;

  }

  function handleChecked3() {

    checkbox1.checked = false;

    checkbox2.checked = false;

  }

  function unable() {
    if (checkbox2.checked) {
      document.getElementById("4").disabled = true;
    }
    else if (checkbox3.checked) {
      document.getElementById("4").disabled = true;
    }
    else {
      document.getElementById("4").disabled = false;
    }
  }


  checkbox1.addEventListener('change', handleChecked1)
  checkbox2.addEventListener('change', handleChecked2)
  checkbox3.addEventListener('change', handleChecked3)

  // checkbox1.addEventListener('change', unable)
  // checkbox2.addEventListener('change', unable)
  // checkbox3.addEventListener('change', unable)

</script>


