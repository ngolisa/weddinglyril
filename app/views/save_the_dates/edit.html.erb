<h1>MODIFIER <%= @save_the_date.name %> : </h1>

<%= simple_form_for @save_the_date do |f| %>


<%= f.input :name, label: "Nom et Prénom : " %>
<div class="row">
  <div class="col-sm">
    <%= f.input :present, label:"Oui, je serai présent(e) !", class: "checkbox", input_html: { id: "1" } %>
  </div>
  <div class="col-sm">
    <%= f.input :number_of_invites, default:0, label: "     | Nous serons : " , collection: [0, 1, 2, 3, 4, 5], input_html: { :style=> 'width: 25%;', :rows => 4}%>
  </div>
</div>
<%= f.input :mairie, label:"Non, mais je serai présent(e) au mariage civil à Paris", class: "checkbox", input_html: { id: "2" }  %>
<%= f.input :rien, label:"Je ne vais pas pouvoir mais je penserai à vous !", class: "checkbox", input_html: { id: "3" }  %>

<%= f.submit "ENVOYER", class: 'btn btn-send' %>
<% end %>

<%= link_to "Delete", save_the_date_path(@save_the_date),
method: :delete,
data: { confirm: "Are you sure?" }, class:"btn-del" %>



<script>

  const checkbox1 = document.getElementById("1");

  const checkbox2 = document.getElementById("2");

  const checkbox3 = document.getElementById("3");

  function handleChecked1() {

    checkbox2.checked = false;

    checkbox3.checked = false;

  }

  function handleChecked2() {

    checkbox1.checked = false;

    checkbox3.checked = false;

  }

  function handleChecked3() {

    checkbox1.checked = false;

    checkbox2.checked = false;

  }


  checkbox1.addEventListener('change', handleChecked1)
  checkbox2.addEventListener('change', handleChecked2)
  checkbox3.addEventListener('change', handleChecked3)

</script>


